@import 'nib'

body
  background #000
  color #bbb
  font-family 'Josefin Slab', sans-serif
  font-weight 300
  line-height 1.5

::-moz-selection { background: hsla(195, 34%, 45%, .3); }
::selection { background: hsla(195, 34%, 45%, .3); }

a,
.link
  color #888
  text-decoration none
  cursor pointer
  &:hover,
  &:active,
  &:focus
    color #666
    outline none

p
  margin-top 1.5em

canvas
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)

#about-content
  display none
#about.is-open
  #about-link
    display none
  #about-content
    display block

#about-link,
#about-content
  fixed top left
  padding 20px

#about-close
  absolute top right
  padding 20px

#about-content
  background rgba(#000, .5)
  h1
    margin-top 0
    font-size 1em
    font-weight 700
