@import 'nib'

html
  background #000

body
  color #bbb
  font-family 'Cutive Mono', monospace
  font-weight 300
  line-height 1.5
  font-size 16px

::-moz-selection { background: hsla(195, 34%, 45%, .3); }
::selection { background: hsla(195, 34%, 45%, .3); }

a,
.link
  color #888
  text-decoration none
  cursor pointer
  &:hover,
  &:active,
  &:focus
    color #666
    outline none

p
  margin 1.5em 0 0

canvas
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)

#about-content,
#about-content-hidden
  display none
#about.is-open
  #about-link
    display none
  #about-content
    display block

$spacing = 20px

#about-link,
#about-content
  fixed top left
  padding $spacing

#about-content
  background rgba(#000, .6)
  width 504px
  height 288px
  h1
    margin-top 0
    font-size 1em
    font-weight 700

.about-close
  display inline-block

#fullscreen-link,
#fullscreen-close
  fixed top right
  padding $spacing
  // TODO hide on mobile

#fullscreen-close
  display none
#fullscreen.is-active
  #fullscreen-link
    display none
  #fullscreen-close
    display block
